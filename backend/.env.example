# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=supply_chain
# Optional: full connection URL (overrides DB_* above)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# LLM Provider: anthropic | ollama | openai
LLM_PROVIDER=anthropic

# Anthropic (when LLM_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Ollama (when LLM_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3

# OpenAI-compatible (when LLM_PROVIDER=openai; also used by Shipping Risk Intelligence agent)
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_MODEL=gpt-4o-mini

# API Keys (optional; mock data used when not set)
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_DAYS_FORECAST=3
NEWS_API_KEY=your_newsapi_key_here

# JWT (email-only OEM login)
JWT_SECRET=your_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRE_DAYS=7

# Trend insights agent (scheduled analysis)
TREND_AGENT_ENABLED=false
TREND_AGENT_INTERVAL_MINUTES=60

# Application
PORT=8000
ENV=development
FRONTEND_URL=http://localhost:3000

MOCK_SERVER_BASE_URL=http://localhost:4000
